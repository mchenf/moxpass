<Window x:Class="moxpass_gui.Views.Warning_PasswordInconsistent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moxpass_gui.Views"
        mc:Ignorable="d"
        Title="WARNING: Inconsistent Passwords!" Height="220" Width="400"
        ResizeMode="NoResize"
        FontSize="14">
    <StackPanel Orientation="Vertical">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48px"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
        <Image Grid.Column="0" Width="48px" Source="/Assets/icons8-general-warning-sign-48.png" />
        <TextBlock Grid.Column="1"  Padding="5" Margin="5" TextWrapping="WrapWithOverflow">
            
            There was a mismatch between "Create Password" and "Confirm Password". Please try again.
        </TextBlock>

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0 30" Background="Blue">
            <Button Width="69" Click="Button_Clicked">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
